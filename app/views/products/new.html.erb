<h1>Products</h1>
<%= form_with model: @product do |form| %>
  <%= form.label :name %><br>
  <%= form.text_field :name %><br>
  
  <%= form.label :name_confirmation %><br>
  <%= form.text_field :name_confirmation %><br>

  <%= form.label :description %><br>
  <%= form.text_field :description %><br>

  <%= form.submit %>
<% end %>